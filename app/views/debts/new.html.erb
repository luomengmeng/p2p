<%= form_for @child_bid, :url => debts_path, html: {class: 'form form-horizontal validate-form', style: 'margin-bottom: 0;'} do |f| %>

	<%= f.hidden_field :loan_id, :value => @loan.id %>
  <%= f.hidden_field :from_bid_id, :value => @child_bid.from_bid_id %>

  <label style='display: inline-block;margin-right: 28px;'>账户现金</label>
	<%= rmb current_user.user_cash.available %>(<%= link_to '充值', account_recharge_path, :style => 'color:#c8ad65;' %>)
	
	<label style='display: inline-block;margin-left: 48px;'>投资金额</label>
	<%= f.text_field :invest_amount, :class => 'input-xlarge', :style => 'margin-right:20px' %>
	<input type='submit' class="btn btn-primary" value='确认投标'>
<% end %>