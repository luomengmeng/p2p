- l = bid.loan
.col-sm-12.hover-effect{:style => "padding:0px;"}
  .box
    .box-content.bid
      .row
        .col-sm-2
          .box{:style => "margin:0px;"}
            .box-content.avatar
              %img.img-responsive{:alt => "Account", :src => "#{bid_avatar_url(l)}"}
        .col-sm-10.no-padding
          .row
            .col-sm-6
              %h4
                %a.dimgray{:href => debt_path(bid), :target => "_blank", :title => l.title}= l.title
            .col-sm-3
              - if l.with_mortgage?
                %label.btn.btn-warning.btn-sm{:style=>"border:none;"} 抵押
              - if l.with_guarantee?
                %label.btn.btn-success.btn-sm{:style=>"border:none;"} 担保
          .row
            .col-sm-3
              %ul.list-unstyled.bid_list
                %li
                  转让金额：
                  %span.text-big.num.text-right
                    %em.value= bid_amount bid.for_sale_amount
                    元
                %li
                  信用等级：
                  %span.fn-right.text-right
                    %a{:class => "creditlevel #{l.try(:credit_level).try(:upcase)} snow"}= l.try(:credit_level).try(:upcase)
            .col-sm-3
              %ul.list-unstyled.bid_list
                %li
                  年利率：
                  %span.text-big.num
                    %em.value= l.interest
                    \%
            .col-sm-3
              %ul.list-unstyled.bid_list
                %li
                  剩余期限：
                  %span.text-big.num.text-right
                    %em.value= bid.for_sale_month
                    个月
                %li
                  还款方式：
                  = t(l.repay_style)
            .col-sm-3
              = link_to '投标', debt_path(bid), :class => "btn btn-primary btn-block btn-lg "