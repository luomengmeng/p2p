   <%= form_note_account flash %>
   <%= form_for @loan_application, html: {class: 'form-horizontal validate-form'} do |f| %>
   <div class="bodson">
        <div class="newblock">
           <div class="title">贷款人申请表</div>
           <div class="jsuanqi">

              <ul>
                 <li>
                  <label><span class="jsuanqi_bt"></span>姓名</label>
                  <%= f.text_field :name, class: 'form-control', 'data-required' => true, 'data-rule-minlength' => 2   %>
                  <label><span class="jsuanqi_bt"></span>身份证</label>
                  <%= f.text_field :id_card, class: 'form-control', 'data-required' => true, 'data-rule-minlength' => 15   %>
                </li>
                 <li>
                  <label><span class="jsuanqi_bt"></span>邮箱</label>
                  <%= f.text_field :email, class: 'form-control', 'data-required' => true, 'data-rule-email' => true   %>
                  <label><span class="jsuanqi_bt"></span>手机号码</label>
                  <%= f.text_field :phone, class: 'form-control', 'data-required' => true, 'data-rule-number' => true, 'data-rule-minlength' => 11   %>
                  
                </li>
                 <li><label>户籍</label>
                    <%= f.text_field :register_addr, class: 'form-control', 'data-required' => true, 'data-rule-minlength' => 2 %>
                    <label>居住地</label>
                    <%= f.text_field :addr, class: 'form-control', 'data-required' => true, 'data-rule-minlength' => 10 %>
                </li>
                 <li><label>月收入</label>
                        <%= f.text_field :monthly_income, class: 'form-control', 'data-required' => true, 'data-rule-minlength' => 2, 'data-rule-number' => true  %>
                    <label>月开销</label>
                        <%= f.text_field :monthly_expense, class: 'form-control', 'data-required' => true, 'data-rule-minlength' => 2, 'data-rule-number' => true  %>
                </li>
                 <li><label>工作单位</label>
                        <%= f.text_field :company, class: 'form-control', 'data-required' => true, 'data-rule-minlength' => 6 %>
                    <label>担任职务</label>
                        <%= f.text_field :title, class: 'form-control', 'data-required' => true, 'data-rule-minlength' => 2 %>
                </li>
              </ul>
           </div>
        </div>
        <div class="newblock">
           <div class="title">贷款人意向</div>
           <div class="jsuanqi">
              <ul>
                 <li><label>借款金额</label>
                        <%= f.text_field :amount, class: 'form-control', 'data-required' => true, 'data-rule-minlength' => 2, 'data-rule-number' => true %>
                    <label>借款用途</label>
                        <%= f.text_field :loan_usage, class: 'form-control', 'data-required' => true, 'data-rule-minlength' => 2 %>
                </li>
                 <li>
                    <%= f.submit "提交", :class => "jkrsubmitser" ,:id => 'send'%>
                </li>
              </ul>
           </div>   
        </div>
   </div>
<% end %>

<%= javascript_include_tag "jquery-validate.min", "data-turbolinks-track" => true %>
<script type="text/javascript">

  $('form').validate({
    onKeyup : true,
    eachValidField : function() {

      $(this).removeClass('error').addClass('success');
    },
    eachInvalidField : function() {

      $(this).removeClass('success').addClass('error');
    }
  });
    
</script>