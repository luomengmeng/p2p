<h2 class='text-center title'>找回密码</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'validate-form' }) do |f| %>
  <%= devise_error_messages! %>
  <div class='form-group'>
    <div class='controls with-icon-over-input'>
      <%= f.email_field :email, autofocus: true, placeholder: "请输入邮箱", class: "form-control", 'data-required' => true, 'data-rule-email' => true %>
    </div>
  </div>
  <%= f.submit "下一步", class: "btn btn-block" %>
<% end %>