<div class="well">
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane active in" id="home">
      <label>名称</label>
      <%= f.text_field :title, :class => "input-xlarge" %>
      <label>CODE</label>
      <%= f.text_area :code, :cols => 40, :rows => 16, :class => "input-xlarge" %>
    </div>
  </div>
</div>

<div class="btn-toolbar form-actions">
  <%= f.submit '保存', :class => 'btn btn-primary' %>
  <% if action_name == 'edit' && (can? :delete, 'backend/web_statistics') %>
    <%= link_to '删除', backend_web_statistic_path(@web_statistic), :method => 'delete', :class => 'btn', :confirm => '确认删除?'%>
  <% end %>
</div>
