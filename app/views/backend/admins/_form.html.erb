<%= form_note flash unless flash.empty? %>
<div class="well">
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane active">
        <label>用户名</label>
        <%= f.text_field :username, :class => 'input-xlarge' %>
        <label>邮箱</label>
        <%= f.text_field :email, :class => 'input-xlarge' %>
        <label>密码</label>
        <%= f.password_field :password, :class => 'input-xlarge' %>
        <label>确认密码</label>
        <%= f.password_field :password_confirmation, :class => 'input-xlarge' %>
        <label>管理员类型</label>
        <% @roles.each do |role| %>
          <%= check_box_tag "user[role_ids][]", role.id, @admin.roles.include?(role) %>
          <%= role.name %>
          <br>
        <% end %>
    </div>
  </div>
</div>
<div class="btn-toolbar form-actions">
  <input type='submit' class="btn btn-primary" value='保存'>
  <% if action_name == 'edit' && (can? :delete, 'backend/admins') %>
    <%= link_to '删除', backend_admin_path(@admin), :method => 'delete', :class => 'btn', :confirm => '确认删除此权限?'%>
  <% end %>
  <div class="btn-group">
  </div>
</div>