<div class="well">
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane active in" id="home">
      <form id="tab">
        <label>名称</label>
        <%= f.text_field :name, :class => "input-xlarge" %>
        <label>操作</label>
        <%= f.select :action, Permission::ACTIONS, {}, {:class => "input-xlarge"} %>
        <label>内容</label>
        <%= f.text_field :subject, :class => "input-xlarge" %>
      </form>
    </div>
  </div>
</div>

<div class="btn-toolbar form-actions">
    <input type='submit' class="btn btn-primary" value='保存'>
    <% if action_name == 'edit' && (can? :delete, 'backend/permissions') %>
      <%= link_to '删除', backend_permission_path(@permission), :method => 'delete', :class => 'btn', :confirm => '确认删除此权限?'%>
    <% end %>
  <div class="btn-group">
  </div>
</div>

