.well
  .tab-content
    .tab-pane.active
      = form_for @user_info, :url => backend_user_path(@user_info), :method => :put, :enctype => "multipart/form-data" do |f|
        .control-group
          = hidden_field_tag :user_id, @user.id
          .controls
            = f.file_field :avatar, class: "file-input-wrapper btn"
            .text-content
              您可以上传JPG、GIF或PNG文件上传图片最大4M
        .form-actions
          = f.submit "保存", :class => "btn btn-primary"