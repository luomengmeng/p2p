<div class="well">
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane active in" id="home">
      <label>名称</label>
      <%= f.text_field :title, :class => "input-xlarge" %>
      <label>链接</label>
      <%= f.text_field :url, :class => "input-xlarge" %>
      <label>Logo</label>
      <%= f.file_field :logo, :class => "btn" %>
    </div>
  </div>
</div>
<div class="btn-toolbar form-actions">
  <%= f.submit '保存', :class => 'btn btn-primary' %>
  <% if action_name == 'edit' && (can? :delete, 'backend/friendlinks') %>
    <%= link_to '删除', backend_friendlink_path(@friendlink), :method => 'delete', :class => 'btn', :confirm => '确认删除?'%>
  <% end %>
</div>
