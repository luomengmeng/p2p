<%= btn_toolbar_adds([name: '添加角色', path: new_backend_role_path, type: 'add']) %>
<div class="well">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>编号</th>
          <th>角色</th>
          <th>管理员</th>
          <th>创建时间</th>
          <th>更新时间</th>
          <th style="width: 26px;"></th>
        </tr>
      </thead>
      <tbody>
        <% @roles.each do |role| %>
          <tr>
            <td><%= role.id %></td>
            <td><%= role.name %></td>
            <td><%= role.is_admin? ? '是' : '否' %></td>
            <td><%= format_time(role.created_at) %></td>
            <td><%= format_time(role.updated_at) %></td>
            <td>
              <a href="<%= edit_backend_role_path(role) %>"><i class="icon-pencil"></i></a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<%= will_paginate @roles %>