<div class="well">
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane active in" id="home">
      <label>名称</label>
      <%= f.text_field :name, :class => "input-xlarge" %>
      <label>是否管理员</label>
      <%= f.check_box :is_admin, :class => "input-xlarge" %>
    </div>
  </div>
</div>

<div class="btn-toolbar form-actions">
    <input type='submit' class="btn btn-primary" value='保存'> <%= link_to '返回', backend_roles_path, :class => 'btn'%>
    <% if action_name == 'edit' && (can? :delete, 'backend/roles') %>
      <%= link_to '删除', backend_role_path(@role), :method => 'delete', :class => 'btn', :confirm => '确认删除此权限?'%>
    <% end %>
  <div class="btn-group">
  </div>
</div>

