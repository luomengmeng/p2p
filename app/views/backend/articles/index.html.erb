<%= btn_toolbar_adds([name: '添加文章', path: new_backend_article_path, type: 'add']) %>
<div class="well">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>编号</th>
        <th>标题</th>
        <th>栏目</th>
        <th>创建时间</th>
        <th style="width: 80px;"></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |a| %>
        <tr>
          <td><%= a.id %></td>
          <td><%= a.title %></td>
          <td><%= a.try(:propaganda).try(:name) %></td>
          <td><%= a.created_at.strftime('%Y-%m-%d') %></td>
          <td>
            <%= link_to_show backend_article_path(a) %>
            <%= link_to_edit edit_backend_article_path(a) %>
            <%= link_to_delete backend_article_path(a)%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @articles, :previous_label => '上一页', :next_label => '下一页' %>
