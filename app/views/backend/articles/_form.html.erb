<div class="well">
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane active in" id="home">
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <label>文章标题</label>
      <%= f.text_field :title, :class => "input-xlarge" %>
      <label>栏目</label>
      <%= f.select :propaganda_id, Propaganda.all.collect { |p| [p.name, p.id]  }  %>
      <label>选项</label>
      <label class="checkbox">
        <%= f.check_box :is_top %> 置顶
      </label>
      <label class="checkbox">
        <%= f.check_box :show_nav %> 导航显示
      </label>
      <label>内容</label>
      <%= f.text_area :content, :cols => 40, :rows => 16, :id => "kindeditor_id" %>
    </div>
  </div>
</div>
<div class="btn-toolbar form-actions">
  <%= f.submit '保存', :class => 'btn btn-primary' %>
  <% if action_name == 'edit' && (can? :delete, 'backend/articles') %>
    <%= link_to '删除', backend_article_path(@article), :method => 'delete', :class => 'btn', :confirm => '确认删除?'%>
  <% end %>
</div>
