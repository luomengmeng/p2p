<div class="well">
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane active in" id="home">
      <label>文件名称</label>
      <%= f.text_field :name, :class => "input-xlarge" %>
      <label>选择文件</label>
      <%= f.file_field :file, :class => "input-xlarge"  %>
      <label>描述</label>
      <%= f.text_area :description, :cols => 40, :rows => 16, :id => "kindeditor_id" %>
    </div>
  </div>
</div>
<div class="btn-toolbar form-actions">
  <%= f.submit '保存', :class => 'btn btn-primary' %>
  <% if action_name == 'edit' && (can? :delete, 'backend/downloads') %>
    <%= link_to '删除', backend_download_path(@download), :method => 'delete', :class => 'btn', :confirm => '确认删除?'%>
  <% end %>
</div>
