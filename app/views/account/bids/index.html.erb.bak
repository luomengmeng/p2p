<div class='row' id='content-wrapper'>
  <div class='col-xs-12'>
    <div class='row'>
      <div class='col-sm-12'>
        <div class='page-header'>
          <h1 class='pull-left'>
            <i class='icon-bullhorn'></i>
            <span>我的投资</span>
          </h1>
        </div>
      </div>
    </div>
    <div class='faq'>
      <%= render partial: "search"%>
      <div class='row'>
        <div class='col-sm-12'>
          <div class='tabbable'>
            <ul class='nav nav-responsive nav-tabs'>
              <li class='<%= "active" if action_name == "index" %>'>
                <a href='<%= account_invests_path %>'>
                  投标中的项目
                </a>
              </li>
              <li class='<%= "active" if action_name == "repaying" %>'>
                <a href='<%= repaying_account_invests_path %>'>
                  收款中的项目
                </a>
              </li>
              <li class='<%= "active" if action_name == "finished" %>'>
                <a href='<%= finished_account_invests_path %>'>
                  已还清的项目
                </a>
              </li>
            </ul>
            <div class='tab-content'>
              <div class='tab-pane active' id=''>
                <table class='table' style='margin-bottom:0;'>
                  <thead>
                    <tr>
                      <th>
                        借款标题
                      </th>
                      <th>
                        借款者
                      </th>
                      <th>
                        金额(元)
                      </th>
                      <th>期限(月)</th>
                      <th>年利率(%)</th>
                      <th>投标时间</th>
                      <th>借出金额</th>
                      <th>状态</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @bids.each do |bid| %>
                    <tr>
                      <td><%= link_to bid.loan.title, invest_path(bid.loan), :target => '_blank' %></td>
                      <td><%= keep_mysterious_sp(bid.loan.borrower.name, 'name') %></td>
                      <td>
                        <%= bid.loan.amount %>
                      </td>
                      <td>
                        <%= bid.invest_month %>
                      </td>
                      <td>
                        <%= bid.interest %>
                      </td>
                      <td>
                        <%= format_time(bid.created_at) %>
                      </td>
                      <td>
                        <%= rmb bid.invest_amount %>
                      </td>
                      <td>
                        <%= t(bid.status) %>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                <%= will_paginate @bids %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
