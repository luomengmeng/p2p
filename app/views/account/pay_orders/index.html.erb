<div class='row' id='content-wrapper'>
  <div class='col-xs-12'>
    <div class='row'>
      <div class='col-sm-12'>
        <div class='page-header'>
          <h1 class='pull-left'>
            <i class='icon-bullhorn'></i>
            <span>账户充值</span>
          </h1>
        </div>
      </div>
    </div>
    <div class='faq'>
      <div class='row'>
        <div class='col-sm-12'>
          <div class='tabbable'>
            <ul class='nav nav-responsive nav-tabs'>
              <li class='<%= "active" if action_name == "new" %>'>
                <a href='<%= account_recharge_path %>'>
                  账户充值
                </a>
              </li>
              <li class='<%= "active" if action_name == "index" %>'>
                <a href='<%= account_recharges_path %>'>
                  充值记录
                </a>
              </li>
            </ul>
            <div class='tab-content'>
              <%= form_note_account flash %>
              <div class='tab-pane active' id=''>
                <table class='table' style='margin-bottom:0;'>
                  <thead>
                    <tr>
                      <th>
                        充值金额
                      </th>
                      <th>
                        充值时间
                      </th>
                      <th>
                        状态
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @pay_orders.each do |order| %>
                    <tr>
                      <td>
                        <%= rmb(order.amount) %>
                      </td>
                      <td>
                        <%= format_time(order.created_at) %>
                      </td>
                      <td>充值成功
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                <%= will_paginate @pay_orders %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
